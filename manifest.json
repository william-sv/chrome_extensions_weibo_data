{
    "manifest_version": 2,
    "name": "weibo_data",
    "version": "1.0.2",
    "description": "获取微博的阅读数、点赞数、评论数、转发数的数据",
    "icons": {
      "128": "img/icon.png"
    },
    "browser_action": {
      "default_icon": "img/icon.png",
      "default_title": "微博数据统计"
    },
    "content_scripts": [
      {
        "matches": [
          "https://weibo.com/p/*/home*"
        ],
        "js": [
          "js/content_script.js"
        ],
        "run_at": "document_end"
      }
    ],
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "web_accessible_resources": [
      "js/inject_script.js"
    ]
  }